{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "autoApprove": true,
      "automerge": true
    }
  ],
  "lockFileMaintenance": { "enabled": true },
  "nix": {
    "enabled": true
  }
}
